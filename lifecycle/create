#!/bin/bash

# This script installs dependencies and sets up the configuration.

echo "Installing dependencies and setting up configuration..."

# Check if Java is installed
if type -p java; then
    echo "Java is already installed."
else
    echo "Java is not installed. Installing OpenJDK 17..."
    # Update package list and install OpenJDK 17
    sudo apt-get update
    sudo apt-get install -y openjdk-17-jre
fi
